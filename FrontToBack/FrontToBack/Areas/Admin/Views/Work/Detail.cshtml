@model WorkImage


<div class="card">
    <h4 class="card-title text-center" style="margin-top:10px">Work Detail</h4>
    <div class="table-responsive text-nowrap">
        
        <table class="table">
            <thead>
                <tr>
                    <th>Work-Image</th>
                    <th>Work-Description</th>
                   
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">               
                    <tr>
                        <td class="py-1">
                            <img src="~/assets/img/@Model.Name" style="width:70px;height:70px" alt="image" />
                        </td>
                     
                        <td>
                           @Model.Work.Description
                        </td>

                    </tr>
                
            </tbody>
        </table>
        <a class="btn btn-info mt-5" style="margin-left:10px" asp-action="Index">Back</a>
    </div>
 
</div>
<!--/ Basic Bootstrap Table -->

