@model IEnumerable<WorkImage>
@{
    ViewData["Title"] = "Work";
}

<div class="container-xxl flex-grow-1 container-p-y">


    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h4 class="card-title text-center" style="margin-top:10px">Works</h4>
        <div class="table-responsive text-nowrap">
            <a class="btn btn-success text-white" asp-action="Create" style="float:right;margin-right:20px;margin-top:5px">Create</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                       
                        <th>Status</th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @foreach (var work in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="~/assets/img/@work.Name" style="width:70px;height:70px" alt="image" />
                            </td>
                         
                            <td>
                                @if (work.SoftDeleted)
                                {
                                    <div class="deActive-status"></div>
                                }
                                else
                                {
                                    <div class="active-status"></div>
                                }




                            </td>
                            <td>
                                <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@work.Id">Info</a>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@work.Id">Edit</a>
                                <a class="btn btn-outline-danger">Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>